{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} | Users
{% endblock %}

{% block headerContent %}
    <h1>
        Profile
        <small>
            Change password
        </small>
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-users"></i> Profile</li>
        <li>
            Change password
        </li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-purple">
                {{ form_start(profileForm, { 'attr': { 'id': 'main-form'}}) }}
                <div class="box-header">
                    <!-- Potential title -->
                </div>
                <div class="box-body">
                    {{ form_widget(profileForm) }}
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-flat bg-purple">Save</button>
                </div>
                {{ form_end(profileForm, {'render_rest': false}) }}
            </div>
        </div>
    </div>
{% endblock %}
