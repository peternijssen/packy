{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} | Projects
{% endblock %}

{% block headerContent %}
    <h1>
        Projects
        <small>Analyze</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('packy_project_overview') }}"><i class="fa fa-tasks"></i> Projects</a></li>
        <li> Analyze</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#composer" data-toggle="tab">Composer</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="composer">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Package</th>
                                <th>Current version</th>
                                <th>Available version</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if project.dependencies is empty %}
                                <tr>
                                    <td colspan="2" class="text-center">No dependencies found!</td>
                                </tr>
                            {% endif %}
                            {% for dependency in project.dependencies  %}
                                <tr>
                                    <td>{{ dependency.package.package }}</td>
                                    <td><span class="label label-{{ dependency.isUpdate ? "success" : "danger" }}">{{ dependency.rawVersion }}</span></td>
                                    <td>{{ dependency.package.latestVersion }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
