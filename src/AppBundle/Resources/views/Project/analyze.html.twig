{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} | Projects
{% endblock %}

{% block headerContent %}
    <h1>
        Projects
        <small>Analyze</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('packy_project_overview') }}"><i class="fa fa-tasks"></i> Projects</a></li>
        <li> Analyze</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header">
                    <!-- Potential title -->
                </div>
                <div class="box-body">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Status</th>
                            <th>Package</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% if project.dependencies is empty %}
                                <tr>
                                    <td colspan="2" class="text-center">No dependencies found!</td>
                                </tr>
                            {% endif %}
                            {% for dependency in project.dependencies  %}
                                <tr>
                                    <td><span class="label label-{{ dependency.isUpdate ? "success" : "danger" }}">{{ dependency.currentVersion }}</span></td>
                                    <td>{{ dependency.package }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <!-- Potential footer -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
