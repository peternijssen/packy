{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} | Projects
{% endblock %}

{% block headerContent %}
    <h1>
        Projects
        <small>
            {% if project.id is null %}
                Add project
            {% else %}
                Edit {{ project.name }}
            {% endif %}
        </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('packy_project_overview') }}"><i class="fa fa-tasks"></i> Projects</a></li>
        <li>
            {% if project.id is null %}
                Add project
            {% else %}
                Edit {{ project.name }}
            {% endif %}
        </li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                {{ form_start(projectForm, { 'attr': { 'id': 'main-form'}}) }}
                <div class="box-header">
                    <!-- Potential title -->
                </div>
                <div class="box-body">
                    {{ form_widget(projectForm) }}
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                {{ form_end(projectForm, {'render_rest': false}) }}
            </div>
        </div>
    </div>
{% endblock %}
