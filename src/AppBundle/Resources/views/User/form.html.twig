{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} | Users
{% endblock %}

{% block headerContent %}
    <h1>
        Users
        <small>Add / Edit</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('packy_user_overview') }}"><i class="fa fa-users"></i> Users</a></li>
        <li> Add / Edit</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                {{ form_start(userForm, { 'attr': { 'id': 'main-form'}}) }}
                <div class="box-header">
                    <!-- Potential title -->
                </div>
                <div class="box-body">
                    {{ form_widget(userForm) }}
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                {{ form_end(userForm, {'render_rest': false}) }}
            </div>
        </div>
    </div>
{% endblock %}
